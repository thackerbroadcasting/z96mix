---
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import { HISTORY } from "@consts";

---

<PageLayout title={HISTORY.TITLE} description={HISTORY.DESCRIPTION}>
    <Container>
      <h1 class="animate font-semibold text-black dark:text-white">
        Playout History
      </h1>
      <br>
      <br>
      <p class="animate">
        <!-- LIGHT MODE -->
        <iframe class="dark:hidden" src="https://live.thackerbroadcasting.com/public/z96_mix/history?theme=light" allowtransparency="true" style="width: 100%; min-height: 850px"></iframe>
        <!-- DARK MODE -->
        <iframe class="hidden dark:block" src="https://live.thackerbroadcasting.com/public/z96_mix/history?theme=dark" allowtransparency="true" style="width: 100%; min-height: 850px; color-scheme: light;"></iframe>
      </p>
    </Container>
</PageLayout>
